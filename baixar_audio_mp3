#!/bin/bash

# Script para fazer download de musicas em mp3 do youtube
# Data: 28/07/2016
# Requerimentos: youtube-dl
# Autor: Jo√£o Lucas <joaolucas@linuxmail.org>
#

if [ $# -eq 1 ]
then
        youtube-dl --extract-audio --audio-format mp3 $1 2> /dev/null
        if [ $? -eq 0 ]
        then
                echo "[ OK ] $1 baixado com sucesso!"
                exit 0
        else
                echo "[ FALHA ] Ocorreram falhas em baixar o arquivo mp3!"
                exit 1
        fi
else
        echo "Uso: $0 <URL>"
        exit 1 
fi
